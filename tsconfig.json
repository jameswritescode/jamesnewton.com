{
  "compilerOptions": {
    "baseUrl": "app/javascript",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["es6", "dom"],
    "module": "es6",
    "moduleResolution": "node",
    "plugins": [{ "name": "typescript-styled-plugin" }],
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "es5",
    "paths": {
      "~gql": ["helpers/graphql.ts"],
      "~helpers/*": ["helpers/*"],
      "~mounts/*": ["mounts/*"],
      "~ui/*": ["ui/*"]
    }
  },
  "exclude": [
    "**/*.spec.ts",
    "node_modules",
    "vendor",
    "public"
  ],
  "compileOnSave": false
}
